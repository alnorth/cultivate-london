<!DOCTYPE html>
<html>
<head>
  <title>Cultivate London</title>
  <%= google_webfonts_link_tag :lato => [300, 700] %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav>
      <%= link_to "Database", { :controller => "database", :action => "index"}, :class => (controller.controller_name == "database" ? "selected" : "") %>
      <%= link_to "Reports", {:controller => "reports", :action => "show"}, :class => (controller.controller_name == "reports" ? "selected" : "") %>
    </nav>
    <span class="brand">Land Management</span>
  </header>
  <div class="main">
    <%= yield %>
  </div>

  <%= javascript_include_tag "application" %>
  <%= yield :action_specific_js if content_for?(:action_specific_js) %>
</body>
</html>
