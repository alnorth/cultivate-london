<!DOCTYPE html>
<html>
<head>
  <title>Cultivate London</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav>
      <%= link_to "Database", { :controller => "database", :action => "index"}, :class => "database " + (controller.controller_name == "database" ? "selected" : "") %>
      <%= link_to "Reports", {:controller => "reports", :action => "show"}, :class => "reports " + (controller.controller_name == "reports" ? "selected" : "") %>
    </nav>
    <span class="brand"><a href="/"><img src="/img/landManagementLogo_v01.png" /></a></span>
  </header>
  <div class="main">
    <%= yield %>
  </div>

  <%= javascript_include_tag "application" %>
  <%= yield :action_specific_js if content_for?(:action_specific_js) %>
</body>
</html>
